#include <iostream>
#include <fstream>
#include <sstream>
#include <string>

int main()
{
    std::string admin_pwd;
    std::string encrypted;
    std::string unencrypted;
    std::string username;
    std::string text;
    char key[5] = "abcd";

    std::ofstream of1("Credentials.txt", std::ios::app);
    if (!of1.is_open())
    {
        std::cout << "Failed to open file for writing.\n";
        return 1;
    }

    std::cout << "\nEnter the Username: ";
    std::cin >> username;
    std::cout << "\nEnter the password: ";
    std::cin >> admin_pwd;

    // Writing the admin password to a file
    of1 << username << ", " << admin_pwd << std::endl;
    of1.close();

    // Reading the encrypted admin password from the file
    std::ifstream if1("Credentials.txt");
    if (!if1.is_open())
    {
        std::cout << "Failed to open file for reading.\n";
        return 1;
    }

    while (getline(if1, text))
    {
        for (int x = 0; x < text.size(); x++)
        {
            // Encryption process (XOR with key)
            encrypted += text[x] ^ key[x % 4];
        }
    }
    if1.close();

    std::cout << "Encrypted: " << encrypted << std::endl;

    // Decryption process (XOR with key)
    for (int x = 0; x < encrypted.size(); x++)
    {
        unencrypted += encrypted[x] ^ key[x % 4];
    }

    std::cout << "Unencrypted: " << unencrypted << std::endl;

    system("pause");
    return 0;
}
